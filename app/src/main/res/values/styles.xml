<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarAc" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FaceBookKitTheme" parent="Theme.AccountKit">
        <item name="android:windowNoTitle">true</item>
        <item name="com_accountkit_background_color">@color/white</item>
        <item name="com_accountkit_button_background_color">@color/colorPrimary</item>
        <item name="com_accountkit_button_border_color">@color/colorPrimary</item>
        <item name="com_accountkit_button_text_color">@color/white</item>
        <item name="com_accountkit_input_background_color">@color/white</item>
        <item name="com_accountkit_input_border_color">@color/colorPrimary</item>
        <item name="com_accountkit_input_text_color">@color/black</item>
        <item name="com_accountkit_primary_text_color">@color/black</item>
        <item name="com_accountkit_text_color">@color/black</item>
        <item name="com_accountkit_button_disabled_background_color">@color/disable_color</item>
        <item name="com_accountkit_primary_color">@color/colorPrimary</item>
        <item name="com_accountkit_button_disabled_text_color">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

</resources>
